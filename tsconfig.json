{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "es2015",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "widget-echarts": [
        "dist/widget-echarts"
      ],
      "widget-echarts/*": [
        "dist/widget-echarts/*"
      ],
      "widget-weather": [
        "dist/widget-weather"
      ],
      "widget-weather/*": [
        "dist/widget-weather/*"
      ],
      "widget-personal-info": [
        "dist/widget-personal-info"
      ],
      "widget-personal-info/*": [
        "dist/widget-personal-info/*"
      ],
      "widget-devkit": [
        "dist/widget-devkit"
      ],
      "widget-devkit/*": [
        "dist/widget-devkit/*"
      ],
      "widget-common-functions": [
        "dist/widget-common-functions"
      ],
      "widget-common-functions/*": [
        "dist/widget-common-functions/*"
      ],
      "widget-simple-line": [
        "dist/widget-simple-line"
      ],
      "widget-simple-line/*": [
        "dist/widget-simple-line/*"
      ],
      "widget-pie": [
        "dist/widget-pie"
      ],
      "widget-pie/*": [
        "dist/widget-pie/*"
      ]
    }
  },
  "exclude": [
    "out-tsc",
    "dist"
  ]
}